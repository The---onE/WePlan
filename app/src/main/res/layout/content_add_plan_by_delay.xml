<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_delay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/delay_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年" />

        <EditText
            android:id="@+id/delay_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月" />

        <EditText
            android:id="@+id/delay_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天" />

        <EditText
            android:id="@+id/delay_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时" />

        <EditText
            android:id="@+id/delay_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />

        <EditText
            android:id="@+id/delay_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0  "
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒后" />
    </LinearLayout>

    <Button
        android:id="@+id/delay_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="添加" />

</RelativeLayout>
